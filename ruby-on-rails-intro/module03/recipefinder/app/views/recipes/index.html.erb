<h1>Searching for - <%= @search_term %></h1>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to image_tag(recipe["image_url"], height: '100', width: '100'), recipe["f2f_url"], target: "_blank" %></td>
      <td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"], target: "_blank" %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
